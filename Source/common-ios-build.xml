<?xml version="1.0" encoding="UTF-8"?>
<project name="AdMob ANE iOS Build Script" default="all">

    <record name="build.log" loglevel="verbose" action="start" />

    <!-- Config File -->
    <property file="build.config"/>

    <target name="build" description="Build iOS Library">

        <!-- Clean XCode Project -->
        <exec executable="xcodebuild" failonerror="true">
            <arg line="-project ${name}Lib.xcodeproj"/>
            <arg line="-alltargets clean"/>
        </exec>

        <!-- Build XCode project -->
        <exec executable="xcodebuild" failonerror="true">
            <arg line="-project ${name}Lib.xcodeproj"/>
            <arg line="-target ${name}"/>
            <arg line="-configuration Release"/>
        </exec>

        <mkdir dir="${output.dir}" />

        <copy todir="${output.dir}" >
            <file file="platform.xml" />
            <file file="build/Release-iphoneos/lib${name}.a"/>
        </copy>

        <copy todir="${output.dir}/Frameworks" >
            <fileset dir="sharedframeworks" includes="**" />
        </copy>
    </target>

    <target name="all" depends="clean, build" />

    <target name="clean">
        <delete dir="${build.dir}" />
        <delete dir="${output.dir}" />
        <delete file="build.log" />
    </target>

</project>
